{% macro field(name, value='', type='text') %}
<div class="field">
  <input type="{{ type }}" name="{{ name }}"
         value="{{ value | escape }}" />
</div>
{% endmacro %}

{% macro dbColumn(name, type, precision, scale) %}
{%- set strings = ['char', 'varchar', 'String'] -%}
{%- set decimals = ['decimal', 'Decimal'] -%}
{%- set integers = ['smallint', 'Int16', 'int'] -%}
{{ '(' if type in strings or type in decimals -}}
{{ precision | d('max') if type in strings -}}
{{ precision + ', ' + scale if type in decimals -}}
{{- ')' if type in strings or type in decimals -}}
{% endmacro %}